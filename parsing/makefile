NAME = minishell

# RÃ©pertoires

# Fichiers source
SRC = $(SRC_DIR)minishell.c \
$(SRC_DIR)utils.c \
$(SRC_DIR)shell_exec.c \
$(SRC_DIR)split_pipe.c \
$(SRC_DIR)tokenize.c \
$(SRC_DIR)utilshelp.c \
$(SRC_DIR)free.c \
# Fichiers objets correspondants
OBJ = $(SRC:.c=.o)

# Compilateur et flags
CC = cc
FLAGS = -Wall -Wextra -Werror
RM = rm -f

# Cible par dÃ©faut
all: $(NAME)

# CrÃ©er l'exÃ©cutable
$(NAME): $(OBJ)
	@echo "ðŸ”¨ Linking $(NAME)..."
	$(CC) $(FLAGS) $(OBJ) -o $(NAME)

# RÃ¨gle pour compiler les fichiers objets
%.o: %.c
	@echo "ðŸ’» Compiling $<"
	$(CC) $(FLAGS) -c $< -o $@

# Nettoyer les fichiers objets
clean:
	@echo "ðŸ§¹ Cleaning object files..."
	$(RM) $(OBJ)

# Supprimer les objets et l'exÃ©cutable
fclean: clean
	@echo "ðŸ§¼ Cleaning everything..."
	$(RM) $(NAME)
# Recompiler tout
re: fclean all

